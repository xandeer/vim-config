" spf13 options {

    " leader keys
    let g:spf13_leader=';'
    let g:spf13_localleader='_'

    " use powerline
    let g:spf13_use_powerline='1'
    " set bundles you need
    let g:spf13_bundle_groups=['general', 'writing', 'youcompleteme', 'programming', 'php', 'ruby', 'python', 'javascript', 'html', 'misc', 'go', 'diary']
    " map edit config
    let g:spf13_edit_config_mapping='<leader>ec'
    let g:spf13_consolidated_directory = $HOME . '/.cache/vim/'
" }
